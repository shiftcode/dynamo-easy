{
  "name": "@shiftcoders/dynamo-easy",
  "version": "2.0.0",
  "description": "Use the power of typescript to define your object mapping when using dynamodb. This library also provides a fluent api for easy interaction with dynamodb.",
  "keywords": [
    "api",
    "aws",
    "dynamo",
    "dynamodb",
    "fluent-api",
    "mapper",
    "orm",
    "typescript",
    "typescript-decorators"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/shiftcode/dynamo-easy"
  },
  "license": "MIT",
  "author": "Michael Wittwer <michael.wittwer@shiftcode.ch>",
  "files": [
    "dist"
  ],
  "main": "./dist/dynamo-easy.js",
  "module": "./dist/_esm5/dynamo-easy.js",
  "typings": "./dist/_types/dynamo-easy.d.ts",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc --outDir ./dist/_esm2015/ && tsc --outDir ./dist/_esm5/ --target es5 && tsc --outDir ./dist/ --module commonjs",
    "build:docs": "typedoc --out dist/docs --target es6 --theme minimal",
    "precommit": "lint-staged",
    "commit": "git-cz",
    "commitmsg": "validate-commit-msg",
    "deploy-docs": "ts-node tools/gh-pages-publish",
    "lint": "tslint --project tsconfig.json -t codeFrame --fix",
    "lint:ci": "tslint --project tsconfig.json -t codeFrame",
    "prepush": "npm run test:coverage && npm run build",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "semantic-release-prepare": "ts-node tools/semantic-release-prepare",
    "test": "jest",
    "test:coverage": "npm run test -- --coverage --no-cache",
    "test:watch": "jest --watch",
    "prettier": "prettier --write --config ./.prettierrc.yml '{src,test}/**/*.ts'"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "helpMessage": "Use \"npm run commit\" instead, we use conventional-changelog format :) (https://github.com/commitizen/cz-cli)"
    }
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "@types/lodash": "^4.14.116",
    "@types/node": "^10.12.11",
    "@types/reflect-metadata": "^0.1.0",
    "@types/uuid": "^3.4.1",
    "aws-sdk": "^2.286.1",
    "colors": "^1.1.2",
    "commitizen": "^3.0.0",
    "coveralls": "^3.0.0",
    "cross-env": "^5.0.5",
    "cz-conventional-changelog": "^2.0.0",
    "greenkeeper-lockfile": "^1.15.1",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "lodash": "^4.17.11",
    "lodash.camelcase": "^4.3.0",
    "prettier": "^1.15.2",
    "rimraf": "^2.6.2",
    "rxjs": "^6.3.3",
    "semantic-release": "^15.12.0",
    "sort-package-json": "^1.16.0",
    "ts-jest": "^23.10.4",
    "ts-loader": "^5.3.0",
    "ts-node": "^7.0.1",
    "tsc-watch": "^1.0.31",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.16.0",
    "typedoc": "^0.13.0",
    "typescript": "^3.1.6",
    "validate-commit-msg": "^2.14.0"
  },
  "peerDependencies": {
    "aws-sdk": "^2.286.1",
    "lodash": "^4.17.10",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.0.0"
  }
}
